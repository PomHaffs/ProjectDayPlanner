<h1><%= @user.name %></h1>


<ul>
  <li><%= @user.email %></li>
  <li><%= @user.admin %></li>
</ul>

<% if @current_user && @current_user.id == @user.id %>

  <div class="controls">
    <!-- link to edit  -->
    <%= link_to "Edit", edit_user_path( @user.id ) %>
    <!-- link to delete  -->
    <%= link_to "Delete", user_path( @user.id ),
    :method => :delete %>
  </div>

<% end %>
